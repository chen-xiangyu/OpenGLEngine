<?xml version="1.0" encoding="utf-8"?>
<SHADER>
	shader_perpixel_shading_vs
	<SHADER_SOURCE_FILE> ./shaders/vertPerpixelShading.glsl </SHADER_SOURCE_FILE>
</SHADER>

<SHADER>
	shader_perpixel_shading_fs
	<SHADER_SOURCE_FILE> ./shaders/fragPerpixelShading.glsl </SHADER_SOURCE_FILE>
</SHADER>

<SHADER>
	shader_pervertex_shading_vs
	<SHADER_SOURCE_FILE> ./shaders/vertPervertexShading.glsl  </SHADER_SOURCE_FILE>
</SHADER>

<SHADER>
	shader_pervertex_shading_fs
	<SHADER_SOURCE_FILE> ./shaders/fragPervertexShading.glsl </SHADER_SOURCE_FILE>
</SHADER>

<RENDER_ALGORITHM>
	PerpixelShading
	<RENDER_TYPE> forward_render </RENDER_TYPE>
	<RENDER_PASS>
		perpixel_shading
		<VERTEX_SHADER> shader_perpixel_shading_vs </VERTEX_SHADER>
		<FRAGMENT_SHADER> shader_perpixel_shading_fs </FRAGMENT_SHADER>
	</RENDER_PASS>
</RENDER_ALGORITHM>

<RENDER_ALGORITHM>
	PervertexShading
	<RENDER_TYPE> forward_render </RENDER_TYPE>
	<RENDER_PASS>
		pervertex_shading
		<VERTEX_SHADER> shader_pervertex_shading_vs </VERTEX_SHADER>
		<FRAGMENT_SHADER> shader_pervertex_shading_fs </FRAGMENT_SHADER>
	</RENDER_PASS>
</RENDER_ALGORITHM>

<RENDER_ALGORITHM>
	DeferredShading
	<RENDER_TYPE> deferred_render </RENDER_TYPE>
	<RENDER_PASS>
		deferred_shading1
		<VERTEX_SHADER> shader_perpixel_shading_vs </VERTEX_SHADER>
		<FRAGMENT_SHADER> shader_perpixel_shading_fs </FRAGMENT_SHADER>
	</RENDER_PASS>
	<RENDER_PASS>
		deferred_shading2
		<VERTEX_SHADER> shader_pervertex_shading_vs </VERTEX_SHADER>
		<FRAGMENT_SHADER> shader_pervertex_shading_fs </FRAGMENT_SHADER>
	</RENDER_PASS>
</RENDER_ALGORITHM>
