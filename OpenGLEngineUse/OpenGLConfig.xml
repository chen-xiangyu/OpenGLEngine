<?xml version="1.0" encoding="utf-8"?>
<GLFW_SETTINGS>
	glfw_settings
	<VERSION_MAJOR>3</VERSION_MAJOR>
	<VERSION_MINOR>3</VERSION_MINOR>
	<PROFILE>GLFW_OPENGL_CORE_PROFILE</PROFILE>
</GLFW_SETTINGS>

<WINDOW_SETTINGS>
	window_settings
	<WIDTH>800</WIDTH>
	<HEIGHT>600</HEIGHT>
	<TITLE>Learn OpenGL</TITLE>
	<INIT_POSITION>100 100</INIT_POSITION>
</WINDOW_SETTINGS>

<SHADER_CONFIG_LIST>
	shader_config_list
	<SHADER_CONFIG_FILE>
		perpixel_shading
		<FILE_NAME>PerpixelShading.xml</FILE_NAME>
	</SHADER_CONFIG_FILE>
	<SHADER_CONFIG_FILE>
		pervertex_shading
		<FILE_NAME>PervertexShading.xml</FILE_NAME>
	</SHADER_CONFIG_FILE>
</SHADER_CONFIG_LIST>

<LIGHT_DIRECTION>0.0 0.0 1.0</LIGHT_DIRECTION>

